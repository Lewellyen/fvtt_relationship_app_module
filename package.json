{
  "name": "relationship-app",
  "type": "module",
  "title": "Relationship App",
  "description": "A Foundry VTT module for creating and managing relationship graphs between actors and other entities.",
  "version": "0.11.2",
  "author": "Andreas Rothe <forenadmin.tir@gmail.com> (https://github.com/Lewellyen)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Lewellyen/fvtt_relationship_app_module.git"
  },
  "bugs": {
    "url": "https://github.com/Lewellyen/fvtt_relationship_app_module/issues"
  },
  "homepage": "https://github.com/Lewellyen/fvtt_relationship_app_module#readme",
  "minimumCoreVersion": "13",
  "compatibleCoreVersion": "13",
  "engines": {
    "node": ">=20.12.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "build": "vite build --mode production",
    "build:dev": "vite build --mode development",
    "dev": "vite build --watch --mode development",
    "check-all": "npm run test:coverage && npm run type-coverage && npm run type-check && npm run svelte-check && npm run lint && npm run css-lint && npm run format && npm run check:encoding",
    "lint": "eslint --config eslint.config.mjs --no-ignore \"src/**/*.{ts,js,svelte}\" --fix",
    "css-lint": "stylelint \"styles/**/*.css\" --fix",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "type-coverage": "node ./scripts/run-type-coverage.mjs --at-least 100 --strict --detail",
    "svelte-check": "svelte-check --tsconfig ./tsconfig.json",
    "format": "prettier --plugin prettier-plugin-svelte --write \"src/**/*.{ts,js,svelte}\" \"styles/**/*.css\"",
    "check:encoding": "node scripts/check-encoding.mjs",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:watch": "vitest --watch",
    "postinstall": "patch-package"
  },
  "dependencies": {
    "@xyflow/svelte": "^1.2.4",
    "cytoscape": "^3.32.1",
    "elkjs": "^0.11.0",
    "flowbite": "^3.1.2",
    "flowbite-svelte": "^1.26.0",
    "svelte": "^5.43.5",
    "valibot": "^1.1.0"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@tailwindcss/postcss": "^4.1.17",
    "@types/cytoscape": "^3.21.9",
    "@types/jquery": "^3.5.33",
    "@types/node": "^20.19.24",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.36.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-handlebars": "^1.0.4",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-svelte": "^3.13.0",
    "fvtt-types": "^13.346.0-beta.20251109202254",
    "happy-dom": "^20.0.10",
    "patch-package": "^8.0.0",
    "picomatch": "^4.0.3",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "stylelint": "^16.25.0",
    "stylelint-config-standard": "^39.0.1",
    "stylelint-config-tailwindcss": "^1.0.0",
    "svelte-check": "^4.3.1",
    "svelte-eslint-parser": "^1.3.2",
    "tailwindcss": "^4.1.13",
    "type-coverage": "^2.29.7",
    "typescript": "^5.9.3",
    "vite": "^7.2.2",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^3.2.4"
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": false,
    "printWidth": 100,
    "tabWidth": 2,
    "endOfLine": "crlf"
  }
}