{
  "name": "relationship-app",
  "type": "module",
  "title": "Relationship App",
  "description": "A Foundry VTT module for creating and managing relationship graphs between actors and other entities.",
  "version": "0.5.0",
  "author": "Your Name",
  "minimumCoreVersion": "13",
  "compatibleCoreVersion": "13",
  "scripts": {
    "build": "vite build --mode production",
    "build:dev": "vite build --mode development",
    "dev": "vite build --watch --mode development",
    "check-all": "npm run test:coverage && npm run type-coverage && npm run type-check && npm run svelte-check && npm run lint && npm run css-lint && npm run format && npm run check:encoding",
    "lint": "eslint --config eslint.config.mjs --no-ignore \"src/**/*.{ts,js,svelte}\" --fix",
    "css-lint": "stylelint \"styles/**/*.css\" --fix",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "type-coverage": "type-coverage --at-least 95 --strict --ignore-files 'src/**/__tests__/**' --ignore-files '**/*.test.ts' --ignore-files 'scripts/**'",
    "svelte-check": "svelte-check --tsconfig ./tsconfig.json",
    "format": "prettier --plugin prettier-plugin-svelte --write \"src/**/*.{ts,js,svelte}\" \"styles/**/*.css\"",
    "check:encoding": "node scripts/check-encoding.mjs",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:watch": "vitest --watch",
    "postinstall": "patch-package"
  },
  "dependencies": {
    "@xyflow/svelte": "^1.2.4",
    "cytoscape": "^3.32.1",
    "elkjs": "^0.11.0",
    "flowbite": "^3.1.2",
    "flowbite-svelte": "^1.13.8",
    "svelte": "^5.0.0",
    "valibot": "^1.1.0"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^6.0.0",
    "@tailwindcss/postcss": "^4.1.13",
    "@types/cytoscape": "^3.21.9",
    "@types/jquery": "^3.5.32",
    "@types/node": "^20.19.7",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-handlebars": "^1.0.4",
    "eslint-plugin-prettier": "^5.5.1",
    "eslint-plugin-svelte": "^3.12.3",
    "fvtt-types": "^13.346.0-beta.20250812191140",
    "happy-dom": "^15.11.7",
    "patch-package": "^8.0.0",
    "picomatch": "^4.0.3",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "stylelint": "^16.24.0",
    "stylelint-config-standard": "^39.0.1",
    "stylelint-config-tailwindcss": "^1.0.0",
    "svelte-check": "^4.3.1",
    "svelte-eslint-parser": "^1.3.2",
    "tailwindcss": "^4.1.13",
    "type-coverage": "^2.29.7",
    "typescript": "^5.3.3",
    "vite": "^7.0.0",
    "vite-tsconfig-paths": "^4.2.1",
    "vitest": "^3.2.4"
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": false,
    "printWidth": 100,
    "tabWidth": 2,
    "endOfLine": "crlf"
  }
}